<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestorInk.Page.SchedulerPage.SchedulerFeed"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Calendar;assembly=Syncfusion.Maui.Calendar"
             Title="SchedulerFeed">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush  EndPoint="0,1">
                <GradientStop Color="#1A1028" Offset="0.0" />
                <GradientStop Color="#2a1c38" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        <VerticalStackLayout>
            <syncfusion:SfCalendar 
                 Margin="0,15,0,0"
                 TodayHighlightBrush="WhiteSmoke"
                 SelectionBackground="#1A1028"
                 WidthRequest="320"                                           
                 VerticalOptions="FillAndExpand" 
                 HorizontalOptions="FillAndExpand"                   
                 BackgroundColor="#2a1c38">

            </syncfusion:SfCalendar>
            <Label 
         Text="Welcome to .NET MAUI!"
         VerticalOptions="Center" 
         HorizontalOptions="Center" />
        </VerticalStackLayout>
    </Grid>
   
</ContentPage>